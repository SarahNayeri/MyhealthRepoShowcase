@model ImageGallery.Client.ViewModels.EditImageViewModel



<div class="bottomMarginDefault">
</div>
<h2 class="leftMarginSmaller">View Image </h2>
<div class="container">
        <div>
            <img class="thumbnailImage" src="@("https://localhost:44366/images/" + ViewData["FileName"])" />
        </div>
        <div>

            <div class="form-group">
                <label>Title</label>
                <input asp-for="Title" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea asp-for="Description" class="form-control" rows="10" disabled></textarea>
            </div>
        </div>
</div>
